@model SchoolRegister.ViewModels.Vms.StudentVm

@{
    ViewData["Title"] = "IssueFinalGrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IssueFinalGrade</h2>
<form asp-action="IssueFinalGrade" method="post">
    <div class="form-group">
    <label asp-for="Id" class="control-label">Student ID</label>
    <input asp-for="Id" class="form-control" />
    <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AverageGraderPerSubject.Keys)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageGraderPerSubject.Values)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var grades in Model.AverageGraderPerSubject)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => grades.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => grades.Value)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

