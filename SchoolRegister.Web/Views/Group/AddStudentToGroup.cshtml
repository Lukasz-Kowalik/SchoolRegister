@model SchoolRegister.ViewModels.DTOs.StudentDto

@{
    ViewData["Title"] = "AddStudentToGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddStudentToGroup</h2>

<h4>Add Student to the group</h4>
<p class="text-danger">@ViewBag.Info</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudentToGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Student ID</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
          <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

