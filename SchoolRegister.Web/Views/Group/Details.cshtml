@using SchoolRegister.ViewModels.Vms
@model SchoolRegister.ViewModels.Vms.GroupVm

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <h1>@Model.Name</h1>

    <p>
        @Html.ActionLink("Add Student", "AddStudentToGroup",
            new
            {
                GroupId = Model.Id,
            })
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.ActionLink("Remove", "RemoveStudent", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>